<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_profile"
    android:orientation="horizontal"
    android:paddingTop="@dimen/drawer_profile_padding_25"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="@dimen/drawer_profile_size_avatar"
        android:layout_height="@dimen/drawer_profile_size_avatar"
        android:gravity="center"
        android:padding="@dimen/drawer_profile_padding_10"
        android:src="@drawable/ic_baseline_face_24" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/drawer_profile_padding_10"
            android:paddingEnd="@dimen/drawer_profile_padding_10"
            android:text="@string/username"
            android:textSize="@dimen/drawer_profile_username_size"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/drawer_profile_padding_10"
            android:paddingEnd="@dimen/drawer_profile_padding_10"
            android:text="@string/user_email"
            android:textSize="@dimen/drawer_profile_email_size"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>

</LinearLayout>